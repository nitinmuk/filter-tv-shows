{
  "name": "coding-challenge-nine",
  "version": "1.0.0",
  "description": "it is a channel nine coding challenge",
  "main": "dist/server.js",
  "scripts": {
    "postinstall": "tsc",
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node dist/server.js",
    "tslint": "tslint -c tslint.json -p tsconfig.json --fix",
    "start:dev": "npm run tslint && tsc && node dist/server.js",
    "watch-node": "nodemon dist/server.js",
    "watch-ts": "tsc -w"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nitinmuk/coding-challenge-nine.git"
  },
  "author": "Nitin Mukesh",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nitinmuk/coding-challenge-nine/issues"
  },
  "homepage": "https://github.com/nitinmuk/coding-challenge-nine#readme",
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "body-parser": "^1.19.1",
    "bunyan": "^1.8.15",
    "express": "^4.17.2",
    "if-env": "^1.0.4"
  },
  "devDependencies": {
    "@types/bunyan": "^1.8.8",
    "@types/chai": "^4.3.0",
    "@types/express": "^4.17.13",
    "@types/hapi__joi": "^17.1.8",
    "@types/mocha": "^9.1.0",
    "chai": "^4.3.6",
    "mocha": "^9.2.0",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "ts-node": "^10.4.0",
    "tslint": "^6.1.3",
    "typescript": "^4.5.5"
  }
}
